<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_emergency_number2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.congnt.androidbasecomponent.view.widget.FlatButtonWithIconTop
            android:id="@+id/btn_call_police"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:flat_icon="@drawable/police"
            app:flat_text="113"
            app:flat_text_top="POLICE" />

        <com.congnt.androidbasecomponent.view.widget.FlatButtonWithIconTop
            android:id="@+id/btn_call_fire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:flat_icon="@drawable/fire"
            app:flat_text="114"
            app:flat_text_top="FIRE" />

        <com.congnt.androidbasecomponent.view.widget.FlatButtonWithIconTop
            android:id="@+id/btn_call_ambulance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            app:flat_icon="@drawable/ambulance"
            app:flat_text="115"
            app:flat_text_top="AMBULANCE" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_emergency_number2">
        <fragment
            android:id="@+id/map_fragment"
            class="com.congnt.androidbasecomponent.view.fragment.MapFragmentWithFusedLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_start_service"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <com.congnt.androidbasecomponent.view.speechview.RecognitionProgressView
            android:id="@+id/speechview"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/ib_walk_mode"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:src="@android:drawable/ic_menu_share" />
    <!--<android.support.v7.widget.SwitchCompat
        android:id="@+id/sw_share_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:text="Share Location:" />-->
</RelativeLayout>